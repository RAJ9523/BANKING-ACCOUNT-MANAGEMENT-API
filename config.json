{
  "openapi": "3.0.0",
  "info": {
    "title": "Bank Management API",
    "description": "API for managing bank accounts. Includes CRUD, deposit, withdraw, close account, transaction history, monthly interest, and statements.",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:5000" },
    { "url": "http://127.0.0.1:5000" }
  ],

  "paths": {

    "/accounts": {
      "post": {
        "summary": "Create a new bank account",
        "operationId": "createAccount",
        "security": [{ "BasicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "balance": { "type": "number" }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Account created successfully" },
          "401": { "description": "Unauthorized" },
          "400": { "description": "Invalid input" }
        }
      },

      "get": {
        "summary": "Get all accounts",
        "operationId": "getAllAccounts",
        "responses": {
          "200": {
            "description": "List of accounts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Account" }
                }
              }
            }
          }
        }
      }
    },

    "/accounts/{id}": {
      "get": {
        "summary": "Get account by ID",
        "operationId": "getAccountById",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Account found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Account" }
              }
            }
          },
          "404": { "description": "Account not found" }
        }
      },

      "put": {
        "summary": "Update account details",
        "operationId": "updateAccount",
        "security": [{ "BasicAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "balance": { "type": "number" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Account updated successfully" },
          "404": { "description": "Account not found" },
          "401": { "description": "Unauthorized" }
        }
      },

      "delete": {
        "summary": "Delete account by ID",
        "operationId": "deleteAccount",
        "security": [{ "BasicAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Account deleted successfully" },
          "404": { "description": "Account not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/accounts/{id}/deposit": {
      "post": {
        "summary": "Deposit money to account",
        "operationId": "deposit",
        "security": [{ "BasicAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": { "type": "number" }
                },
                "required": ["amount"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Deposit successful" },
          "404": { "description": "Account not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/accounts/{id}/withdraw": {
      "post": {
        "summary": "Withdraw money from account",
        "operationId": "withdraw",
        "security": [{ "BasicAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": { "type": "number" }
                },
                "required": ["amount"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Withdrawal successful" },
          "400": { "description": "Insufficient funds" },
          "404": { "description": "Account not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/accounts/{id}/close": {
      "put": {
        "summary": "Close an account",
        "operationId": "closeAccount",
        "security": [{ "BasicAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Account closed successfully" },
          "404": { "description": "Account not found" },
          "401": { "description": "Unauthorized" }
        }
      }
    },

    "/accounts/{id}/transactions": {
      "get": {
        "summary": "Get transaction history",
        "operationId": "getTransactions",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Transaction history",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Transaction" }
                }
              }
            }
          },
          "404": { "description": "Account not found" }
        }
      }
    },

    "/accounts/{id}/statement": {
      "get": {
        "summary": "Generate account statement",
        "operationId": "generateStatement",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          },
          {
            "name": "format",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "enum": ["pdf", "json"],
              "default": "json"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Account statement generated"
          },
          "404": { "description": "Account not found" }
        }
      }
    },

    "/accounts/interest": {
      "post": {
        "summary": "Apply monthly interest to all accounts",
        "operationId": "applyInterest",
        "security": [{ "BasicAuth": [] }],
        "responses": {
          "200": { "description": "Monthly interest applied" },
          "401": { "description": "Unauthorized" }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Account": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "balance": { "type": "number" },
          "status": { "type": "string" },
          "created_at": { "type": "string", "format": "date-time" }
        }
      },

      "Transaction": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "account_id": { "type": "integer" },
          "amount": { "type": "number" },
          "type": { "type": "string", "enum": ["deposit", "withdraw"] },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },

    "securitySchemes": {
      "BasicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}
